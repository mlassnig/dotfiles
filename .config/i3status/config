general {
        colors = true
	color_good = "#aaffaa"
	color_degraded = "#ffffaa"
	color_bad = "#ffaaaa"
        interval = 5
}

order += "volume master"
order += "disk /"
order += "wireless wlan0"
order += "ethernet eth0"
order += "battery 0"
order += "battery 1"
order += "load"
order += "tztime local"

wireless wlan0 {
        format_up = "%essid: %ip [%quality]"
        format_down = "WiFi down"
}

ethernet eth0 {
        format_up = "%ip: %speed"
        format_down = "Ethernet down"
}

volume master {
       format = "♪: %volume"
       format_muted = "♪: Muted"
       device = "pulse"
}

battery 0 {
	format = "Battery 0: %percentage %remaining [%status]"
	integer_battery_capacity = true
	hide_seconds = true
	path = "/sys/class/power_supply/BAT0/uevent"
	status_bat = "Drain"
	status_chr = "Charge"
	status_full = "Full"
}

battery 1 {
	format = "Battery 1: %percentage %remaining  [%status]"
	integer_battery_capacity = true
	hide_seconds = true
	path = "/sys/class/power_supply/BAT1/uevent"
	status_bat = "Drain"
	status_chr = "Charge"
	status_full = "Full"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

load {
        format = "CPU: %1min"
}

disk "/" {
        format = "HDD: %avail Free"
}
